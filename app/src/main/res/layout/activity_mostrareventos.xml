<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.mostrareventos">

    <TextView
        android:id="@+id/tvTituloAgr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Eventos Agregados"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvEventoAgr"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tvTituloAgr"
        app:layout_constraintStart_toStartOf="@+id/tvTituloAgr"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAgr" />

    <Button
        android:id="@+id/btnVolmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Volver a MenÃº"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTituloAgr"
        app:layout_constraintStart_toStartOf="@+id/tvTituloAgr"
        app:layout_constraintTop_toBottomOf="@+id/lvEventoAgr" />
</androidx.constraintlayout.widget.ConstraintLayout>